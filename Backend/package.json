{
  "name": "resolvr-backend",
  "version": "1.0.0",
  "description": "Backend for the Resolvr DNS lookup project built with Express and TypeScript",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "dev": "tsx watch src/index.ts",
    "clean": "rm -rf dist",
    "build": "npm run clean && tsc",
    "start": "node dist/index.js",
    "lint": "eslint . --ext .ts && tsc --noEmit",
    "lint:fix": "eslint . --ext .ts --fix"
  },
  "keywords": [
    "dns",
    "express",
    "typescript",
    "backend",
    "api"
  ],
  "author": "Raghav Bhati",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^5.1.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/node": "^20.11.30",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.6.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
